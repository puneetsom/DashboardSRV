<Context reloadable="true" unpackWAR="true" swallowOutput="true">

	<!-- 
		The database connection pools defined in this file are being used
		by the QueryCache mechanism, although in the Dashboard, we are not
		caching any results.
	-->

	<Resource auth="Container" description="CDW Db Connection"
		driverClassName="oracle.jdbc.driver.OracleDriver" maxActive="24"
		maxIdle="12" maxWait="60000" name="jdbc/CdwSQL"
		password="@db.cdw.password@" type="javax.sql.DataSource"
		url="@db.cdw.url@"
		username="@db.cdw.username@" validationQuery="select * from dual" />


	<!-- ************** REF Connection ************** -->

	<Resource auth="Container" description="Ref Db Connection"
		driverClassName="oracle.jdbc.driver.OracleDriver" maxActive="10"
		maxIdle="2" maxWait="5000" name="jdbc/RefSQL"
		password="@db.ref.password@" type="javax.sql.DataSource"
		url="@db.ref.url@"
		username="@db.ref.username@" validationQuery="select * from dual" />


	<!-- ************** OLSM Connection ************** -->

	<Resource auth="Container" description="OLSM Db Connection"
		driverClassName="oracle.jdbc.driver.OracleDriver" maxActive="10"
		maxIdle="2" maxWait="5000" name="jdbc/OlsmSQL"
		password="@db.olsm.password@" type="javax.sql.DataSource"
		url="@db.olsm.url@"
		username="@db.olsm.username@" validationQuery="select * from dual" />

	<!-- ************** Operational Monitoring Connection ************** -->

	<Resource auth="Container" description="Operational Monitoring Connection"
		driverClassName="oracle.jdbc.driver.OracleDriver" maxActive="4"
		maxIdle="2" maxWait="5000" name="jdbc/OpMonSQL"
		password="@db.opmon.password@" type="javax.sql.DataSource"
		url="@db.opmon.url@"
		username="@db.opmon.username@" validationQuery="select * from dual" />

</Context>