<?xml version="1.0" encoding="UTF-8"?>
<XYChart xmlns="http://www.amdocs.com/dashboard/mobile/XYChart"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://www.amdocs.com/dashboard/mobile/XYChart ../xsd/XYChart.xsd"
		 locale="en_US"
         name="Year-Over-Year Comparison">

	<Service name="selectYOYChartData" serviceCode="SalesKPI_selectYOYChartData" cacheLife="21600">
		<Param name="report_type" /> <!-- M (monthly), W (weekly), or D (daily) -->
		<Param name="data_field" />  <!-- hndl_cnt, asgn_cnt, sold_amt, etc -->
		<Param name="prd_year" required="false" />
		<Param name="rep_id" type="number" required="false" />
		<Param name="sales_mgr_id" type="number" required="false" />
		<Param name="gm_id" type="number" required="false" />
		<Param name="region_code" type="number" required="false" />
		<Param name="canvass_code" required="false" />
		<Param name="channel_code" required="false" />
		<Param name="office_code" required="false" />
	</Service>

	<seriesSet>
		<columnSet type="clustered">
			<columnSeries id="prevKpiVal" displayName="2012" yField="prev_kpi_val" fillColor="38b4d3" fillAlpha="0.7" />
			<columnSeries id="kpiVal" displayName="2013" yField="kpi_val" fillColor="b0d6f1" fillAlpha="0.7" />
		</columnSet>
	</seriesSet>

	<axisSet>
		<axis id="xAxis" position="bottom" categoryField="kpi_date_lbl" type="string" title="Month" showTitle="false" />
		<axis id="yAxis" position="left" type="number" labelFormatter="currencyFormatter" title="Dollars ($)" showTitle="false" />
	</axisSet>

	<formatterSet>
		<formatter id="currencyFormatter" type="currency" maxFractionalDigits="0" abbreviationThreshold="10000" abbreviationFractionalDigits="1" />
		<formatter id="popoverFormatter" type="currency" maxFractionalDigits="0" />
		<formatter id="currencyPopoverFormatter" type="currency" maxFractionalDigits="0" />
	</formatterSet>	

</XYChart>
