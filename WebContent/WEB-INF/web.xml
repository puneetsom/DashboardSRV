<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

  <mime-mapping>   
    <extension>xlsx</extension>   
    <mime-type>application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</mime-type>   
  </mime-mapping> 
  
  <display-name>Executive Advisor BlazeDS Server</display-name>
  <description>The BlazeDS Server for the Executive Advisor Dashboard application.</description>
  <listener>
    <listener-class>flex.messaging.HttpFlexSession</listener-class>
  </listener>
  <servlet>
    <servlet-name>MessageBrokerServlet</servlet-name>
    <servlet-class>flex.messaging.MessageBrokerServlet</servlet-class>
    <init-param>
      <param-name>services.configuration.file</param-name>
      <param-value>/WEB-INF/flex/services-config.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>QueryCacheInit</servlet-name>
    <servlet-class>com.amdocs.infra.querycache.QueryCacheInit</servlet-class>
    <init-param>
      <param-name>QueryXmlFiles</param-name>
      <param-value>/WEB-INF/flex/amdocs-query-REF.xml,/WEB-INF/flex/amdocs-query-CORE.xml,/WEB-INF/flex/amdocs-query-CDW.xml,/WEB-INF/flex/amdocs-query-CMSN.xml,/WEB-INF/flex/amdocs-query-OLSM.xml,/WEB-INF/flex/amdocs-query-10B.xml,/WEB-INF/flex/amdocs-query-OPMON.xml,/WEB-INF/flex/amdocs-query-SLA.xml,/WEB-INF/flex/amdocs-query-LMPub.xml,/WEB-INF/flex/amdocs-query-JOB-TREND.xml,/WEB-INF/flex/sensis-query-SLA.xml,/WEB-INF/flex/amdocs-query-USAGE.xml,/WEB-INF/flex/amdocs-query-WRF.xml,/WEB-INF/flex/amdocs-query-IOG.xml,/WEB-INF/flex/amdocs-query-SLV.xml,/WEB-INF/flex/amdocs-query-REQREP.xml,/WEB-INF/flex/amdocs-query-GRID.xml,/WEB-INF/flex/amdocs-query-SalesKpi.xml,/WEB-INF/flex/amdocs-query-ABRKPI.xml,/WEB-INF/flex/amdocs-query-DEFECTSREP.xml,/WEB-INF/flex/amdocs-query-CLOSEDTKT.xml</param-value>
    </init-param>
    <init-param>
      <param-name>ConnectionPoolHelper</param-name>
      <param-value>com.amdocs.dashboard.utils.AttConnectionPoolHelper</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>XmlLoaderInit</servlet-name>
    <servlet-class>com.amdocs.infra.xmlloader.XmlLoaderInit</servlet-class>
    <init-param>
      <param-name>XmlLoaderXmlFiles</param-name>
      <param-value>/WEB-INF/flex/amdocs-xml-loader-IypSalesOps.xml,/WEB-INF/flex/amdocs-xml-loader-IypWeeklySummary.xml,/WEB-INF/flex/amdocs-xml-loader-AMSS.xml,/WEB-INF/flex/amdocs-xml-loader-SalesKpi.xml</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
  </servlet>
