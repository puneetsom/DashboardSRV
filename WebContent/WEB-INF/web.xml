  <servlet>
    <description>Used by AlivePDF to display PDF's in a browser.</description>
    <display-name>CreatePDFServlet</display-name>
    <servlet-name>CreatePDFServlet</servlet-name>
    <servlet-class>com.amdocs.dashboard.utils.CreatePDFServlet</servlet-class>
  </servlet>
  <servlet>
    <description>Used to generate ARTask to link to Remedy</description>
    <display-name>ARTaskServlet</display-name>
    <servlet-name>ARTaskServlet</servlet-name>
    <servlet-class>com.amdocs.dashboard.utils.ARTaskServlet</servlet-class>
  </servlet>
  <servlet>
    <description>Used server XLS files generated from ExcelGenerator</description>
    <display-name>ExcelServer</display-name>
    <servlet-name>ExcelServer</servlet-name>
    <servlet-class>com.amdocs.dashboard.excel.ExcelServer</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>MessageBrokerServlet</servlet-name>
    <url-pattern>/messagebroker/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreatePDFServlet</servlet-name>
    <url-pattern>/createPDF</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Used to Export a Flex DataGrid to Excel.</description>
    <display-name>ExportToExcelServlet</display-name>
    <servlet-name>ExportToExcelServlet</servlet-name>
    <servlet-class>com.amdocs.dashboard.utils.ExportToExcelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExportToExcelServlet</servlet-name>
    <url-pattern>/exportToExcel</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ARTaskServlet</servlet-name>
    <url-pattern>/servlet/ARTask</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ExcelServer</servlet-name>
    <url-pattern>/servlet/ExcelServer/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>